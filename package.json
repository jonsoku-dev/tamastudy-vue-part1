{
  "name": "tamastudy-remote",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/jonsoku2/tamastudy-remote",
  "author": "jonsoku2 <whdtjr2792@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7",
    "prettier": "^2.0.5"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prepush": "npm test"
  },
  "lint-staged": {
    "vue_part1/src/**/*.{js,json,vue}": [
      "prettier --write"
    ],
    "markup_part3/src/**/*.{css,html,js,json,scss}": [
      "prettier --write"
    ],
    "markup_part3/src/**/*.{js}": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "./scripts/git-commit-message.sh $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged --allow-empty"
    }
  }
}
